{
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "noEmitOnError": false,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
